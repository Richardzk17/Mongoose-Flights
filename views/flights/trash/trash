  </a>
    </div>
    <div>R: </div>
    <div><%= flight.releaseYear %></div>
    <div>Rating: </div>
    <div><%= flight.mpaaRating %></div>
    <div>Cast: </div>
    <div><%= flight.cast.join(', ') %></div>
    <div>Now Showing: </div>
    <div><%= flight.nowShowing ? 'Yes' : 'Nope' %></div>
  </section>
<% // new markup below %>
<h2>Reviews</h2>
<% if (flight.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
